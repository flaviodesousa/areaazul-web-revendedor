block append head
    link(rel='stylesheet', href='/stylesheets/ativacao.css')
    link(rel='stylesheet', href='/stylesheets/lib/select2.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/select2-bootstrap.min.css')

block content
    if message
        .alert.alert-danger
            a.close(href='#', data-dismiss='alert') &times;
            strong #{message}
    header.row
        .col-md-4  
        .col-md-4
        .col-md-4
    .row
        .col-md-2
        .col-md-8
            h4.text-center Ativação
            form(name='myform', role='form', action="/ativacao/salvar_ativacao", method='POST')
                .row
                    .form-group.col-lg-3
                        span.obrigatorios *
                        label Placa
                        input#campoPlaca.form-control(type='text', placeholder='Placa', name='placa', value=values.placa)

                #detalhesDoVeiculo
                    .row
                        .form-group.col-lg-12
                            span.obrigatorios *
                            label(for='campoCidade') Cidade da placa
                            select#campoCidade.form-control(name='cidade_id')
                                option
                                if values && values.cidade_id
                                    option(value=values.cidade_id selected='selected')
                    .row
                        .form-group.col-lg-6
                            span.obrigatorios *
                            label(for='marca') Marca
                            input#marca.form-control(type='text',placeholder='Marca', name='marca', value=values.marca)
                        .form-group.col-lg-6
                            span.obrigatorios *
                            label(for='modelo') Modelo
                            input#modelo.form-control(type='text', placeholder='Modelo', name='modelo', value=values.modelo)
                    .row
                        .form-group.col-lg-6
                            span.obrigatorios *
                            label(for='cor') Cor
                            input#cor.form-control(type='text', placeholder='Cor', name='cor', value=values.cor)
                        .form-group.col-lg-6
                            fieldset.form-inline.input-group
                                legend Tipo
                                label.radio-inline(for='radioButtonCarro')
                                    input#radioButtonCarro(type='radio', name='tipo_veiculo',
                                        value='carro', checked=values.tipo_veiculo=='carro')
                                    | Carro

                                label.radio-inline(for='radioButtonMoto')
                                    input#radioButtonMoto(type='radio', name='tipo_veiculo',
                                        value='moto', checked=values.tipo_veiculo=='moto')
                                    | Moto

                                label.radio-inline(for='radioButtonCamionete')
                                    input#radioButtonCamionete(type='radio', name='tipo_veiculo',
                                        value='camionete', checked=values.tipo_veiculo=='camionete')
                                    | Camionete

                .form-group
                    .form-inline
                        .form-group
                            label * Tempo  
                        .form-group
                            .form-group.col-lg-5
                            select.form-control(id="tempo" name="tempo")
                                for preco in configuracao.parametros.matriz_precos
                                    option(
                                        value=preco.permanencia_maxima_minutos
                                        selected=(values.tempo==preco.permanencia_maxima_minutos))
                                        | #{preco.label}
                    br
                    .form-inline
                        label  Celular
                        .form-group
                            .form-group.col-lg-5
                                input#campoCelular.form-control(type='text', placeholder='Celular', name='celular', value=values.celular)
                .form-group
                    .form-inline
                        .form-group.pull-right
                            label * Campos Obrigátorios
                br
                br
                .form-group
                    .controls
                        button#button1id.btn.btn-small.btn-primary(name='button1id') Ativar
        footer.row
            .col-md-4  
            .col-md-4
            .col-md-4  


block append scripts
    script(src='/js/lib/jquery.inputmask.bundle.min.js')
    script(src='/js/lib/select2.full.min.js')
    script(src='/js/lib/js.cookie.js')
    script(src='/js/ativacao.js')
