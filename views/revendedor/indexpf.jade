extends ../layout

block optionuser
	div#corpooptionuser
		div#filhooptionuser
			a(href="/revendedor")
				img(src= "../images/icons/back.png" id="imgoptionuser")

block content
	table#tabelatitulopagina
		tr
			td
				table
					tr
						td &nbsp;
					tr
						td
							label#tituloPagina Cadastro de revendedor Pessoa Física
					tr
						td &nbsp;
	div
		form(action="/revendedor/cadastrar_revendedor" method="post" align="center")
			fieldset(id="first")
				table
					tr
						td
							label#textoFormulario CPF
						td
							label#textoFormulario Nº Celular
					tr
						td
							input(type="text" id="cpf" name="cpf" maxlength="11" size="1" style="background-color:  #e2e9ee; width: 85px;")
						td
							input(type="text"  id="telefone" name="telefone" maxlength="11" size="1" style=" background-color:  #e2e9ee; width: 80px;")
					tr
						td(colspan="2")
							label#textoFormulario Nome Completo
					tr
						td(colspan="2")
							input(type="text"  id="nome" name="nome" maxlength="50" size="1" style="background-color:  #e2e9ee; width: 99.5%;")
					tr
						td(colspan="2")
							label#textoFormulario E-mail
					tr
						td(colspan="2")
							input(type="text"  id="email" name="email" maxlength="50" size="1" style="background-color:  #e2e9ee; width: 99.5%;")
					tr
						td(colspan="2")
							input(type="checkbox")
							label#textoFormulario  Aceito os 
							a(href="#" id="textoFormulario" title="Termos de Serviço" target="_blank") Termos de Serviço

					tr
						td &nbsp;
					tr
						td
							button(id="buttonSave" name="buttonSave") Salvar