extends ../layoutSemLogin

block content
    include ../alerts
    .container-center
        header.row
            .col-md-4
            .col-md-4
            .col-md-4
        .row
            .col-md-6.col-md-offset-3.col-sm-12

                section.login-form
                    form(action='/' method='POST' role='login')
                        img.img-responsive(src='/images/areaazul.png' alt='')
                        .input-group.input-group-lg
                            span.input-group-addon
                                span.glyphicon.glyphicon-user
                            input.form-control.input-lg(type='text' placeholder='usuario' name='login')
                        .input-group.input-group-lg
                            span.input-group-addon
                                span.glyphicon.glyphicon-lock
                            input.form-control.input-lg(type='password' placeholder='senha' name='senha')
                        button.btn.btn-primary.btn-lg.btn-block
                            span.glyphicon.glyphicon-log-in
                            | &nbsp;Entrar
                        div
                            a(href='/revendedor/cadastro') Criar uma conta
                            |  ou&nbsp;
                            a(href='/novaSenha') Esqueceu sua senha?

    block append
        link(rel='stylesheet', href='/css/index.css')
