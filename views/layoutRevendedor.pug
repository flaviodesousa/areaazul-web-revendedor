doctype html
html
    head
        block title
            title Area Azul

        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            meta(name='viewport', content='width=device-width, initial-scale=1')
            link(rel='stylesheet', media='screen', href='//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
            link(rel='stylesheet', href='/stylesheets/pagina.css')
            link(rel='stylesheet', href='/stylesheets/skinning.css')
            link(rel='stylesheet', href='/stylesheets/menu.css')
            link(rel='stylesheet', href='/stylesheets/home.css')
    body
        div#container
            div#topo

            block optionuser
                div#corpooptionuser
                    div#filhooptionuser
                        span
                            label Usuário:
                    div#filhooptionicons
                        span
                            a(href="/ativacao/ativacaoRevenda")
                                img(src= "../images/icons/home.png" class='imgoptionuser')
                        span
                            a(href="/logout")
                                img(src= "../images/icons/exit.png" class='imgoptionuser')
            div#corpo

                div#espacotop
                    span
                        a#link(href='/usuario_revendedor/lista') Usuários de Revenda 
                    block content
                div#espacofooter

            footer
                div#rodape
                    span#textorodape Copyright © Solutions - 2012-2015 Área Azul

        block scripts
            script(src='/js/lib/lodash.min.js')
            script(src='/js/lib/jquery.min.js')
            script(src='/js/lib/bootstrap.min.js')
