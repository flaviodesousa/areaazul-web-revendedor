extends ../layout

block optionuser
    div#corpooptionuser
        div#filhooptionuser
          a(href="")
          img(src= "../images/icons/back.png" id="imgoptionuser")

block content
  body()
   -if(message)
     .alert.alert-danger
      button.close(type='button', data-dismiss='alert') x
      strong #{message}
    div#containerCorpo
      header.row
        .col-md-4  
        .col-md-4
        .col-md-4  
      .row
        .col-md-3
        .row.form
          .col-md-6
             h4.text-center Cadastro de Usuario Revendedor
             br
             form(name='form', role='form', action="/usuario_revendedor/cadastrar_usuario_revendedor", method="POST")
              .form-group
                .row
                  .form-inline
                    .form-group.col-lg-6
                      label * CPF:
                      input#cpf_PessoaFisica.form-control(required='', type='text', name='cpf')
                    .form-group.col-lg-6
                      label Celular: 
                      input#celular_PessoaFisica.form-control(required='',type='text', name='celular_pf')
              .form-group
                label.control-label(for='fullName') * Nome: 
                input#nomepf.form-control(required='', type='text', name='nome_pf')
              .form-group
                label.control-label(for='country') * E-mail:
                .input-group
                  span#basic-addon1.input-group-addon @
                  input#emailpf.form-control(required='', type='text', , name='email_pf', placeholder="email@example.com", aria-describedby='basic-addon2')
              .form-group
                label.control-label(for='country') * Nome de usuário: 
                input#usuariopf.form-control(required='', type='text', name='nome_usuario_pf')
              .form-group
                .row
                  .control-group
                    .form-group.col-lg-6
                      label * Senha: 
                      input#senhapf.form-control(required='', type='password', name='senha_pf')
                    .form-group.col-lg-6
                      label * Confirmar senha: 
                      input#confirmar_senhapf.form-control(required='', type='password', name='confirmar_senha_pf')
              .form-group
                  .row
                    .form-inline
                      .form-group.col-lg-6
                        label.checkbox
                          input#optionsRadios1(type='checkbox', name='termo_servico', value='termo_servico')
                          |  Li e concordo com os termos de serviços
                      .form-group.col-lg-3.pull-right
                        label * Campos Obrigátorios
                .form-group
                  .controls
                    button#button1id.btn.btn-small.btn-primary(name='button1id') Salvar
                    button#button2id.btn.btn-danger.pull-right(name='button2id') Cancelar      
        .col-md-3
      footer.row
        .col-md-4  
        .col-md-4
        .col-md-4  
      div
      block append scripts
          script(src='/js/usuario_revendedor/cadastro.js')
     



